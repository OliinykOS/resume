<main class='m-2'>
  {{#with program}}
    <div class='card'>
      {{#with excursion}}
        <div class='card-header'>
          <h2>{{name}}</h2>
          <time datetime={{date}}>{{date}}
            -
            {{location.country}},
            {{location.city}}</time>
        </div>
        <div class='card-body'>
          <h3>Program:</h3>
          <div>
            <ul>
              {{#each program}}
                <li>
                  <details>
                    <summary>{{name}},
                      {{type}}
                      <span
                        class='badge rounded-pill text-bg-info'
                      >{{duration}} hours</span>
                    </summary>
                    {{#with details}}
                      <div class='card m-3'>
                        {{#if museum}}
                          {{#with museum}}
                            <div class='card-header'>
                              <h4>{{name}}</h4>
                              {{#with location}}
                                <em>
                                  Address:
                                  {{address}},
                                  {{city}},
                                  {{country}}</em>
                              {{/with}}
                            </div>

                            <div class='card-body'>
                              <h5>Exhibits:</h5>
                              <ul>
                                {{#each exhibits}}
                                  <li>
                                    <div>
                                      <b>{{name}}</b>,
                                      {{artist}}
                                      {{#if audio_guide}}
                                        <span
                                          class='badge rounded-pill text-bg-info'
                                        >with audio guide</span>
                                      {{/if}}
                                    </div>
                                    <div><em
                                      >{{description}}</em></div>
                                  </li>
                                {{/each}}
                              </ul>
                            </div>
                          {{/with}}
                        {{/if}}
                        {{#if venue}}
                          {{#with venue}}
                            <div class='card-header'>
                              <h4>{{name}}</h4>
                              {{#with location}}
                                <em>Address:
                                  {{address}},
                                  {{city}},
                                  {{country}}</em>
                              {{/with}}
                            </div>
                          {{/with}}
                          <div class='card-body'>
                            <h5>Performers:</h5>
                            <ul>
                              {{#each performers}}
                                <li>
                                  <b>{{name}}</b>
                                  <div>
                                    <em>{{type}}</em>
                                  </div>
                                </li>
                              {{/each}}
                            </ul>

                          </div>
                        {{/if}}
                        {{#with guide}}
                          <div class='card-footer'><strong
                            >Guide:</strong>
                            {{name}}
                            (<em>{{language}}</em>) -
                            Rating:
                            {{rating}}</div>
                        {{/with}}
                      </div>
                    {{/with}}
                  </details>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      {{/with}}
    </div>
  {{/with}}
</main>