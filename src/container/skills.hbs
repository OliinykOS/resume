{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      <section>
        <div class='card m-2'>
          <div class='card-header'>
            <h2>All skills</h2>
          </div>
          <ul class='list-group list-group-flush'>
            {{#each skills}}
              <li class='list-group-item'>
                {{name}}
                {{#if point includeZero=true}}
                  ({{point}})
                {{/if}}
                {{#if isTop}}
                  <span
                    class='badge rounded-pill text-bg-success'
                  >Top</span>
                {{/if}}
                {{#unless point includeZero=true}}
                  <span
                    class='badge rounded-pill text-bg-danger'
                  >don't now</span>
                {{/unless}}
                {{#unless point}}
                  {{#if point includeZero=true}}
                    <span
                      class='badge rounded-pill text-bg-warning'
                    >In progress</span>
                  {{/if}}
                {{/unless}}
              </li>
            {{/each}}
          </ul>
        </div>
      </section>
      <section>
        <div class='card m-2'>
          <div class='card-header'>
            <h3>Му hobbies</h3>
          </div>
          <ul class='list-group list-group-flush'>
            {{#each hobbies}}
              <li class='list-group-item'>
                {{name}}
                {{#if isMain}}
                  <span
                    class='badge text-bg-info'
                  >favourite</span>{{/if}}
              </li>
            {{/each}}
          </ul>
        </div>
      </section>
    </main>
  {{/with}}
</div>

