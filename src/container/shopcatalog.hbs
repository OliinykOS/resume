<main class='m-1'>
  <div class='card'>
    {{#with navigation}}
      <div class='nav'>
        {{#each links}}
          <div class='nav-item'>
            <a class='nav-link' href={{href}}>{{text}}</a>
          </div>
        {{/each}}
        <a class='nav-link disabled' href='#'>Disabled</a>
      </div>
    {{/with}}
  </div>
  <section>
    <div class='mt-5'>
      <nav aria-label='breadcrumb'>
        <ol class='breadcrumb'>
          {{#each breadcrumb}}
            {{#if url}}
              <li class='breadcrumb-item'><a
                  href={{url}}
                >{{name}}</a></li>
            {{else}}
              <li
                class='breadcrumb-item active'
                aria-current='page'
              >{{name}}</li>
            {{/if}}
          {{/each}}
        </ol>
      </nav>
    </div>
    <h1>{{header}}</h1>
    <div class='row my-4'>
      {{#each sortBlock}}
        <div class='col-3'>
          <select class='form-select'>
            <option selected>{{placeholder}}</option>
            {{#each options}}
              <option value={{value}}>{{text}}</option>
            {{/each}}
          </select>
        </div>
      {{/each}}
    </div>
  </section>
  <section>
    <div class='row my-5'>
      <div class='col-4'>
        {{#with filterBlock}}
          <div class='card'>
            <div class='card-body'>
              {{#with sellers}}
                <div>{{title}}</div>
                {{#each list}}
                  <div class='form-check my-2'>
                    <input
                      type='checkbox'
                      class='form-check-input'
                      name='sellers'
                    />
                    <label
                      class='form-check-label'
                    >{{value}}</label>
                  </div>
                {{/each}}
              {{/with}}
              <hr />
              {{#with brands}}
                <div>{{title}}</div>
                <input
                  class='form-control'
                  placeholder={{input.placeholder}}
                />
                {{#each options}}
                  <div class='form-check my-2'>
                    <input
                      type='checkbox'
                      class='form-check-input'
                      name='brands'
                    />
                    <label
                      class='form-check-label'
                    >{{value}}</label>
                  </div>
                {{/each}}
              {{/with}}
              <hr />
              {{#with price}}
                <div>{{title}}</div>
                <input
                  class='form-control my-2'
                  placeholder={{range.from}}
                />
                <input
                  class='form-control my-2'
                  placeholder={{range.to}}
                />
                <button
                  type='button'
                  class='btn btn-outline-secondary my-2'
                  href={{button.link}}
                >{{button.text}}</button>
              {{/with}}

              {{#each filterList}}
                <hr />
                <div>{{title}}</div>
                {{#each options}}
                  <div class='form-check my-2'>
                    <input
                      type='checkbox'
                      class='form-check-input'
                      name='sellers'
                    />
                    <label
                      class='form-check-label'
                    >{{value}}</label>
                  </div>
                {{/each}}

              {{/each}}
            </div>
          </div>
        {{/with}}
      </div>
      <div class='col-8'>
        <div class='row g-2'>
          {{#each goodsList}}
            <div class='col-6'>
              {{> catalogItem item=this}}
              {{!------------------------}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </section>
  <section>
    {{#with service}}
      <div class='card text-bg-success text-center'>
        <div class='card-body'>
          <h2 class='card-title'>{{title}}</h2>
          <p>{{description}}</p>
          {{#each buttons}}
            <button
              type='button'
              class='btn btn-primary text-start mt-2'
              href={{link}}
            >{{text}}</button><br />
          {{/each}}
        </div>
      </div>
    {{/with}}
  </section>
  <hr />
  <section>
    <div class="mt-3">
      <div class="row">
        {{#each footer}}
          <div class="col-2">
            <ul class="nav">
              {{#each this}}
                <li class="nav-item">
                  {{#if @last}}
                    <a class="nav-link disabled" href="#">{{this.text}}</a>
                  {{else}}
                    <a class="nav-link" href="{{this.link}}">{{this.text}}</a>
                  {{/if}}
                </li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>
    </div>
  </section>
</main>