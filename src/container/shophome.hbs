<main class="m-1">
    <div class="card">
        {{#with navigation}}
        <div class="nav">
            {{#each links}}
            <div class="nav-item">
                <a class="nav-link" href={{href}}>{{text}}</a>
            </div>
            {{/each}}
                <a class="nav-link disabled" href="#">Disabled</a>
        </div>        
        {{/with}}
    </div>
    <section class="mt-5 mb-5">
        {{#with newsBlock}}
        <h2 class="display-3 text-center">{{title}}</h2>
        <div class="row g-3">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-dark">
                    <div class="card-header">
                        {{title}}
                        {{#if isNew}}
                            <span class="badge rounded-pill text-bg-success">New</span>
                        {{/if}}
                        {{#if isTop}}
                            <span class="badge rounded-pill text-bg-danger">Top</span>
                        {{/if}}
                    </div>
                    <div class="card-body">{{description}}</div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr>
    <section class="mt-5 mb-5">
        {{#with goodsBlock}}
        <ul class="nav nav-tabs">
            {{#each tabs}}
                <li class="nav-item col-2 text-center"> 
                    <a class="nav-link{{#if isActive}}
                    active fw-bold
                    {{else}}
                        {{#if isDisabled}}
                            disabled
                        {{/if}}
                    {{/if}}"
                    href="#"
                    >{{text}}</a>
                </li>
            {{/each}}
        </ul>
        <div class="row g-2 mt-5 mb-5">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src={{image}} alt="{{title}}">
                    <div class="card-body">
                        <div class="card-title fw-bold">
                        {{title}}
                        {{#if isHot}}
                            <span class="badge rounded-pill text-bg-warning">New</span>
                        {{/if}}
                        {{#if isNew}}
                            <span class="badge rounded-pill text-bg-primary">Top</span>
                        {{/if}}
                    </div>
                        {{description}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr>
    <section>
        {{#with subscribe}}
        <div class="card text-bg-dark">
            <div class="card-body">
                <h2 class="card-title">{{header}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <button type="button" class="btn btn-primary text-start mt-2" href={{link}}>{{text}}</button><br>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
    <section>
        {{#with service}}
        <div class="card text-bg-success text-center">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <button type="button" class="btn btn-primary text-start mt-2" href={{link}}>{{text}}</button><br>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
</main>