{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      <section>
        <div class='card m-2'>
          <div class='card-header'>
            <h2>Work history</h2>
          </div>
          <div class='card-body'>
            <ul>
              {{#each works}}
                <li>
                  <div>{{position}}</div>
                  <div>
                    {{duration.from}}
                    -
                    {{#if duration.to}}
                      {{duration.to}}
                    {{else}}
                      (still working)
                    {{/if}}
                  </div>
                  <div>
                    {{#if company.url}}
                      <a
                        class='btn text-primary'
                        href={{company.url}}
                      ><b>{{company.name}}</b></a>
                    {{else}}
                      <b>{{company.name}}</b>
                    {{/if}}
                  </div>
                  <div>
                    <strong>Projects ({{projectAmount}})</strong>
                  </div>
                  <ul>
                    {{#each projects}}
                      <li>
                        <div>
                          <a
                            class='btn text-primary'
                            href={{url}}
                          >{{name}}</a>
                        </div>
                        <div><p>{{about}}</p></div>
                        <div><em>Project stacks ({{stackAmoGnt}})</em></div>
                        <div>
                          <ul>
                            {{#each stacks}}
                              <li>{{name}}</li>
                            {{/each}}
                          </ul>
                        </div>
                        <div><em>Project awards ({{awardAmoGnt}})</em></div>
                        <div>
                          <ul>
                            {{#each awards}}
                              <li>{{name}}</li>
                            {{/each}}
                          </ul>
                        </div>
                      </li>
                    {{/each}}
                  </ul>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </section>
    </main>
  {{/with}}
</div>

